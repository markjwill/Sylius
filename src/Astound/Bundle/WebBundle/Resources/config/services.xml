<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="astound.menu_builder.backend.class">Astound\Bundle\WebBundle\Menu\AstoundBackendMenuBuilder</parameter>
    </parameters>

    <services>
        <service id="astound.menu_builder.backend" class="%astound.menu_builder.backend.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="security.context" />
            <argument type="service" id="translator" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="astound.menu.backend.main" class="Knp\Menu\MenuItem" factory-service="astound.menu_builder.backend" factory-method="createMainMenu" scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="astound.backend.main" />
        </service>
        <service id="astound.menu.backend.sidebar" class="Knp\Menu\MenuItem" factory-service="astound.menu_builder.backend" factory-method="createSidebarMenu" scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="astound.backend.sidebar" />
        </service>
    </services>

</container>
